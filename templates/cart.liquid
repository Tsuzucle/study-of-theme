<div class="section_container Contents-wrap cart_container">
    <div class="section_inner cart__inner">
        <div class="section_title font01">カートの商品</div>
        <form method="post" class="cart_form">
            <div class="cart_items_box">


                {% for line_item in cart.items %}
                <div class="line_item">

                    <div class="line_item_inner">
                        <img src="{{line_item.image | product_img_url: '1920x'}}" alt="">
                        <div class="line_info_inner">
                            <div class="line_item_name font02">{{line_item.title}}</div>
                            <div class="line_item_count">
                                <button class="quantity__button no-js-hidden btn-minus" name="minus" type="button">
                                    <span class="visually-hidden">{{ 'products.product.quantity.decrease' | t: product:
                                        item.product.title | escape }}</span>
                                    {% render 'icon-minus' %}
                                </button>
                                <input class="quantity__input" type="number" name="updates[]"
                                    value="{{ line_item.quantity }}" min="0"
                                    aria-label="{{ 'products.product.quantity.input_label' | t: product: item.product.title | escape }}"
                                    id="Quantity-{{ item.index | plus: 1 }}" data-index="{{ item.index | plus: 1 }}">
                                <button class="quantity__button no-js-hidden btn-plus" name="plus" type="button">
                                    <span class="visually-hidden">{{ 'products.product.quantity.increase' | t: product:
                                        item.product.title | escape }}</span>
                                    {% render 'icon-plus' %}
                                </button>

                            </div>






                            <div class="line_item_price font01 bold">{{line_item.line_price | money}} (税込)</div>

                        </div>
                    </div>

                    <a class="delete_btn" href="/cart/change?line={{forloop.index}}&quantity=0"
                        rel={{line_item.id}}><span class="fas fa-trash-alt"></span>削除</a>
                </div>
                {% endfor %}


                <div class="cart_total_price bold font02">
                    合計金額 {{cart.total_price | money}}(税込)
                </div>

                <p class="continue-shopping"><a href="/collections/all">ショッピングを続ける<span>→</span></a></p>

                {% comment %} {% render"cart-attributes-os1"%} {% endcomment %}

